<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".adicionar_quiz">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="539dp"
                android:layout_height="464dp"
                android:src="@drawable/triangulo_background_1"
                tools:layout_editor_absoluteX="-114dp"
                tools:layout_editor_absoluteY="-18dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="513dp"
            android:text="Próximo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.823" />

        <Button
            android:id="@+id/btnCriar"
            android:layout_width="214dp"
            android:layout_height="52dp"
            android:backgroundTint="#D9D9D9"
            android:clickable="false"
            android:text="CRIAR QUIZ"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.851" />


        <EditText
            android:id="@+id/perguntaQuiz"
            android:layout_width="235dp"
            android:layout_height="174dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="INSERIR TEXTO"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.183" />

        <EditText
            android:id="@+id/opCorreta"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:background="#8B87FF7E"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="Opção Correta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.447" />

        <EditText
            android:id="@+id/opErradaTres"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:background="#d9d9d9"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="Opção Errada TRES"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.714" />

        <EditText
            android:id="@+id/opErradaDois"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:background="#d9d9d9"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="Opção Errada DOIS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.625" />

        <EditText
            android:id="@+id/opErradaUm"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:background="#d9d9d9"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="Opção Errada UM"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.536" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar quiz"
            android:textColor="@color/black"
            android:textSize="45dp"
            app:layout_constraintBottom_toTopOf="@+id/perguntaQuiz"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.69"
            tools:layout_editor_absoluteX="104dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>